<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0dp" android:color="@color/colorTableBorder" />
                </shape>
            </item>
            <item android:bottom="1.0dp" android:right="1.0dp"  android:top="1.0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorTableItemPressed" />
                    <padding android:bottom="5.0dp" android:left="5.0dp" android:right="5.0dp" android:top="5.0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0dp" android:color="@color/colorTableBorder" />
                </shape>
            </item>
            <item android:bottom="1.0dp" android:right="1.0dp" android:top="1.0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorTableItemDisable" />
                    <padding android:bottom="5.0dp" android:left="5.0dp" android:right="5.0dp" android:top="5.0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0dp" android:color="@color/colorTableBorder" />
                </shape>
            </item>
            <item android:bottom="1.0dp" android:right="1.0dp" android:top="1.0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorTableItem" />
                    <padding android:bottom="5.0dp" android:left="5.0dp" android:right="5.0dp" android:top="5.0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
